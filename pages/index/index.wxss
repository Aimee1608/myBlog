@import '../common/init.wxss';

/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.container{
  width:100%;
  height:100%;
  position: absolute;
  left:0;
  top:0;
  z-index:999;
  background:#fff;
}
.page01{
  width:100%;
  height:100%;
  position: absolute;
  left:0;
  top:0;
  z-index:1;
}
.menu-list{
  width:100%;
  /*height:30rpx;*/
  box-sizing: border-box;
}
.menu-list:after{
  content: '';
  display: block;
  clear:both;
}
.list{
  box-sizing:border-box;
  float:left;
  width:250rpx;
  height:200rpx;
  border:1px solid #aaa;
  text-align: center;
  line-height: 200rpx;
  font-size: 28rpx;
  font-family: Arial, Helvetica, sans-serif;
}

.bg-img{
  width:100%;
  height:393.75rpx;
}
.bg-img swiper-item image{
  width:100%;
  height:393.75rpx;
}
.page01-more{
  width:100%;
}
.page01-title01{
    text-align: center;
    width:100%;
  }
.search-section{
  box-sizing: border-box;
  margin:0 auto;
  width:400rpx;
  height:48rpx;
  line-height: 48rpx;
  vertical-align: center;
  border:1px solid #aaa;
  padding-left:24rpx;
  border-radius:48rpx; 
  font-size: 24rpx;
}